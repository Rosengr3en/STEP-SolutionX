{
  "name": "StepX",
  "version": "1.0.0",
  "description": "UI5 Application: StepX",
  "author": "Mads3132",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm-run-all build:ts build:ui5",
    "build:opt": "npm-run-all build:ts build:ui5:opt",
    "build:ts": "babel src --out-dir webapp --source-maps true --extension \".ts,.js\" --copy-files",
    "build:ui5": "ui5 build --clean-dest",
    "build:ui5:opt": "ui5 build self-contained --clean-dest --all",
    "start": "npm-run-all --parallel watch:ts start:ui5",
    "watch:ts": "babel src --out-dir webapp --source-maps true --extension \".ts,.js\" --copy-files --watch",
    "start:ui5": "ui5 serve --port 8080 -o index.html",
    "start:dist": "ui5 serve  --port 8080 -o index.html --config ui5-dist.yaml",
    "ts-typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@sapui5/ts-types": "^1.108.0",
    "@sapui5/ts-types-esm": "1.99.0",
    "@types/jquery": "^3.5.1",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@ui5/cli": "^2.14.1",
    "@wdio/cli": "^7.16.16",
    "@wdio/local-runner": "^7.16.16",
    "@wdio/mocha-framework": "^7.16.15",
    "@wdio/spec-reporter": "^7.16.14",
    "babel-preset-transform-ui5": "^7.0.6",
    "cross-var": "^1.1.0",
    "eslint": "^8.4.1",
    "mbt": "^1.2.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.6.0",
    "shx": "^0.3.4",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.3",
    "ui5-middleware-livereload": "^0.5.8",
    "ui5-middleware-simpleproxy": "^0.8.4",
    "wdio-ui5-service": "^0.8.2"
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-livereload",
      "ui5-tooling-transpile",
      "ui5-middleware-simpleproxy"
    ]
  }
}
