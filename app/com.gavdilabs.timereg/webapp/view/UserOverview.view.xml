<mvc:View
	height="100%"
	controllerName="com.gavdilabs.timereg.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<core:InvisibleText id="text1" text="Label text"/>

	<Page
		showHeader="true"
		enableScrolling="true"
		class="sapUiContentPadding"
		showNavButton="false" 
		title="Time registration">

		<content>
			<Table
				id="idProjectsTable"
				items="{/Projects}">
				<headerToolbar>
					<OverflowToolbar id="otbSubheader">
						<ToolbarSpacer/>
						<SearchField ariaLabelledBy="text1" id="maxPrice" liveChange="onFilter">
							<layoutData><OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
						</SearchField>
							<Button text="Work Schedule" type="Transparent" press="onWorkSchedule"/>
						<OverflowToolbarButton tooltip="Sort" type="Transparent" text="Sort" icon="sap-icon://sort" press="onSort"/>
						<OverflowToolbarButton tooltip="Group" type="Transparent" text="Group" icon="sap-icon://group-2" press="onGroup"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em"><Text text="Projects" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Remaining Hours" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Start Date" /></Column>
					<Column hAlign="End"><Text text="End Date" /></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{ProjectName}" text="{Projects}" />
							<Text text="{RemainingHours}" />
							<Text text="{StartDate}" />
							<Text text="{EndDate}" />
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>
